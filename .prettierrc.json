{
    "useTabs": false,
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "bracketSpacing": true,
    "arrowParens": "always",
    "semi": true,
    "trailingComma": "all",
    "overrides": [
        {
            "files": "*.js",
            "options": {
                "parser": "flow"
            }
        },
        {
            "files": "*.md",
            "options": {
                "printWidth": 90,
                "trailingComma": "none",
                "proseWrap": "always"
            }
        },
        {
            "files": "*.json",
            "options": {
                "tabWidth": 2,
                "printWidth": 90,
                "proseWrap": "never"
            }
        }
    ]
}


